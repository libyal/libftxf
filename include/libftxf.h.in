#if !defined( _LIBFTXF_H )
#define _LIBFTXF_H

#include <libftxf/codepage.h>
#include <libftxf/definitions.h>
#include <libftxf/error.h>
#include <libftxf/extern.h>
#include <libftxf/features.h>
#include <libftxf/types.h>

#include <stdio.h>

#if defined( __cplusplus )
extern "C" {
#endif

/* -------------------------------------------------------------------------
 * Support functions
 * ------------------------------------------------------------------------- */

/* Returns the library version
 */
LIBFTXF_EXTERN \
const char *libftxf_get_version(
             void );

/* -------------------------------------------------------------------------
 * Error functions
 * ------------------------------------------------------------------------- */

/* Frees an error
 */
LIBFTXF_EXTERN \
void libftxf_error_free(
      libftxf_error_t **error );

/* Prints a descriptive string of the error to the stream
 * Returns the amount of printed characters if successful or -1 on error
 */
LIBFTXF_EXTERN \
int libftxf_error_fprint(
     libftxf_error_t *error,
     FILE *stream );

/* Prints a descriptive string of the error to the string
 * The end-of-string character is not included in the return value
 * Returns the amount of printed characters if successful or -1 on error
 */
LIBFTXF_EXTERN \
int libftxf_error_sprint(
     libftxf_error_t *error,
     char *string,
     size_t size );

/* Prints a backtrace of the error to the stream
 * Returns the amount of printed characters if successful or -1 on error
 */
LIBFTXF_EXTERN \
int libftxf_error_backtrace_fprint(
     libftxf_error_t *error,
     FILE *stream );

/* Prints a backtrace of the error to the string
 * The end-of-string character is not included in the return value
 * Returns the amount of printed characters if successful or -1 on error
 */
LIBFTXF_EXTERN \
int libftxf_error_backtrace_sprint(
     libftxf_error_t *error,
     char *string,
     size_t size );

/* -------------------------------------------------------------------------
 * Record functions
 * ------------------------------------------------------------------------- */

/* Creates a record
 * Make sure the value record is referencing, is set to NULL
 * Returns 1 if successful or -1 on error
 */
LIBFTXF_EXTERN \
int libftxf_record_initialize(
     libftxf_record_t **usn_record,
     libftxf_error_t **error );

/* Frees a record
 * Returns 1 if successful or -1 on error
 */
LIBFTXF_EXTERN \
int libftxf_record_free(
     libftxf_record_t **usn_record,
     libftxf_error_t **error );

/* Copies the record from the byte stream
 * Returns 1 if successful or -1 on error
 */
LIBFTXF_EXTERN \
int libftxf_record_copy_from_byte_stream(
     libftxf_record_t *usn_record,
     const uint8_t *byte_stream,
     size_t byte_stream_size,
     libftxf_error_t **error );

/* Retrieves the size
 * Returns 1 if successful or -1 on error
 */
LIBFTXF_EXTERN \
int libftxf_record_get_size(
     libftxf_record_t *usn_record,
     uint32_t *size,
     libftxf_error_t **error );

/* Retrieves the update time
 * Returns 1 if successful or -1 on error
 */
LIBFTXF_EXTERN \
int libftxf_record_get_update_time(
     libftxf_record_t *record,
     uint64_t *update_time,
     libftxf_error_t **error );

/* Retrieves the file reference
 * Returns 1 if successful or -1 on error
 */
LIBFTXF_EXTERN \
int libftxf_record_get_file_reference(
     libftxf_record_t *record,
     uint64_t *file_reference,
     libftxf_error_t **error );

/* Retrieves the parent file reference
 * Returns 1 if successful or -1 on error
 */
LIBFTXF_EXTERN \
int libftxf_record_get_parent_file_reference(
     libftxf_record_t *record,
     uint64_t *parent_file_reference,
     libftxf_error_t **error );

/* Retrieves the update sequence number
 * Returns 1 if successful or -1 on error
 */
LIBFTXF_EXTERN \
int libftxf_record_get_update_sequence_number(
     libftxf_record_t *record,
     uint64_t *update_sequence_number,
     libftxf_error_t **error );

/* Retrieves the update reason flags
 * Returns 1 if successful or -1 on error
 */
LIBFTXF_EXTERN \
int libftxf_record_get_update_reason_flags(
     libftxf_record_t *record,
     uint32_t *update_reason_flags,
     libftxf_error_t **error );

/* Retrieves the update source flags
 * Returns 1 if successful or -1 on error
 */
LIBFTXF_EXTERN \
int libftxf_record_get_update_source_flags(
     libftxf_record_t *record,
     uint32_t *update_source_flags,
     libftxf_error_t **error );

/* Retrieves the file attribute flags
 * Returns 1 if successful or -1 on error
 */
LIBFTXF_EXTERN \
int libftxf_record_get_file_attribute_flags(
     libftxf_record_t *record,
     uint32_t *file_attribute_flags,
     libftxf_error_t **error );

/* Retrieves the size of the UTF-8 encoded name
 * The returned size includes the end of string character
 * Returns 1 if successful or -1 on error
 */
LIBFTXF_EXTERN \
int libftxf_record_get_utf8_name_size(
     libftxf_record_t *record,
     size_t *utf8_name_size,
     libftxf_error_t **error );

/* Retrieves the UTF-8 encoded name
 * The size should include the end of string character
 * Returns 1 if successful or -1 on error
 */
LIBFTXF_EXTERN \
int libftxf_record_get_utf8_name(
     libftxf_record_t *record,
     uint8_t *utf8_name,
     size_t utf8_name_size,
     libftxf_error_t **error );

/* Retrieves the size of the UTF-16 encoded name
 * The returned size includes the end of string character
 * Returns 1 if successful or -1 on error
 */
LIBFTXF_EXTERN \
int libftxf_record_get_utf16_name_size(
     libftxf_record_t *record,
     size_t *utf16_name_size,
     libftxf_error_t **error );

/* Retrieves the UTF-16 encoded name
 * The size should include the end of string character
 * Returns 1 if successful or -1 on error
 */
LIBFTXF_EXTERN \
int libftxf_record_get_utf16_name(
     libftxf_record_t *record,
     uint16_t *utf16_name,
     size_t utf16_name_size,
     libftxf_error_t **error );

#if defined( __cplusplus )
}
#endif

#endif

